import os

def clear_screen():
    os.system('cls' if os.name == 'nt' else 'clear')

# intro message and menu display
def show_menu():
    print("Welcome to the Coffee Machine!")
    print("1. Espresso (Nu50)")
    print("2. Latte (Nu100)")
    print("3. Cappuccino (Nu150)")
    print("4. Exit")
# asking for users choice and returning it
def get_choice():
    choice = input("Please select your coffee (1-4): ")
    return choice

def process_payment(cost):
    print(f"Please insert Nu{cost}")
    payment = float(input("Amount inserted: Nu"))
    if payment >= cost:
        change = payment - cost
        print(f"Here is your coffee! Change: ${change:.2f}")
    else:
        print("Sorry, not enough money. Money refunded.")
# main function to run the coffee machine
def main():
    while True:
        show_menu()
        choice = get_choice()
        if choice == "1":
            process_payment(2)
        elif choice == "2":
            process_payment(3)
        elif choice == "3":
            process_payment(3.5)
        elif choice == "4":
            print("Thank you! Goodbye.")
            break
        else:
            print("Invalid choice. Please try again.")

if __name__ == "__main__":
    main()